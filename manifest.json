{
    "name": "Simple Recipe",
    "version": "0.0.0.1",
    "description": "Quickly collect and simply display recipe information.",
    "permissions": ["declarativeContent", "activeTab", "clipboardWrite"],
    "page_action": {
        "default_popup": "interface.html",
        "default_icon": {
          "16": "images/logo_16.png",
          "32": "images/logo_32.png",
          "48": "images/logo_48.png",
          "128": "images/logo_128.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "icons": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "manifest_version": 2
}

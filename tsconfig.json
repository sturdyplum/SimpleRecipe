{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "lib": ["es2015", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "paths": {
            "recipe-scraper-js": ["node_modules/recipe-scraper-js/src"],
            "recipe-scraper-js/*": ["node_modules/recipe-scraper-js/src/*"]
        },
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/",
        "dist",
        "**/*.spec.ts"
    ]
}